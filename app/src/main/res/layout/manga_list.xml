<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/tableRow">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/lblListHeader"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="@string/hint_sample_manga_title"
            android:layout_gravity="center|start"
            android:textSize="20sp"
            android:textColor="#f9f93d"
            android:paddingLeft="10dp"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/lblListHeaderMangaLastBook"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:hint="@string/hint_sample_child_last_book"
            android:layout_gravity="center|start"
            android:textSize="20sp"
            android:textColor="#f9f93d"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_input_add"
            android:id="@+id/lblListHeaderAddBtn"
            android:onClick="addOneMangaBookBehind"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.48" />

    </TableRow>


</TableLayout>
